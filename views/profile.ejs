<!doctype html>
<html>
  <head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
      body { padding-top:80px; word-wrap:break-word; }
    </style>
  </head>
  <body>
    <div class="container">

      <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      </div>

      <div class="row">

        <!-- REDDIT INFORMATION -->
        <div class="col-sm-6">
          <div class="well">
            <h3 class="text-info"><span class="fa fa-reddit"></span> Reddit</h3>

              <p>
                <strong>id</strong>: <%= user.id %><br>
                <strong>username</strong>: <%= user.name %><br>
              </p>

          </div>
        </div>

        <!-- GITHUB INFORMATION -->
        <div class="col-sm-6">
          <div class="well">
            <h3 class="text-info"><span class="fa fa-github"></span> Github</h3>

              <p>
                <strong>id</strong>: <%= user.id %><br>
                <strong>display name</strong>: <%= user.displayName %><br>
                <strong>username</strong>: <%= user.username %><br>
                <strong>email</strong>: <%= user.emails[0].value %><br>
              </p>

          </div>
        </div>
      </div>

    </div>
  </body>
</html>